@model List<EquipmentItem>
@using ErmakovAppDiplom.Repositories.IRepositories;
@inject ICategoryRepository CategoryRepo

@{
    ViewData["Title"] = "Инвентарь";
    var categories = CategoryRepo.GetAll();
}


<div class="">
    <div class="d-flex justify-content-between mb-3">
        <h2>Список инвентаря</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">+ Добавить</button>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Название</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal-@item.Id">Редактировать</button>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>

                <!-- Edit Modal -->
                <div class="modal fade" id="editModal-@item.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="Edit" asp-controller="EquipmentItem" method="post">
                                <div class="modal-header">
                                    <h5 class="modal-title">Редактировать: @item.Name</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Название</label>
                                        <input type="text" name="Name" value="@item.Name" class="form-control" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Категория</label>
                                        <select name="CategoryId" class="form-select" required>
                                            @foreach (var category in categories)
                                            {
                                                @if (item.CategoryId == category.Id)
                                                {
                                                    <option value="@category.Id" selected>@category.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@category.Id">@category.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Сохранить</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" asp-controller="EquipmentItem" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить предмет</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Категория</label>
                        <select name="CategoryId" class="form-select" required>
                            @foreach (var category in categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Добавить</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>
