@using ErmakovAppDiplom.Models;
@model List<User>;

@{
    ViewData["Title"] = "Пользователи";
}

<h2 class="mb-4">Список пользователей</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Email</th>
            <th>Активен</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.SecondName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge bg-success">Да</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Нет</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Подробнее</a>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить пользователя?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
